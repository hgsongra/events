
<h1 class="text-left">Meetings</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Start at</th>
      <th>End at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meetings.each do |meeting| %>
      <tr>
        <td><%= link_to meeting.title, meeting %></td>
        <td><%= meeting.description %></td>
        <td><%= meeting.start_at %></td>
        <td><%= meeting.end_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @meetings %>
<br>

<%= link_to 'New Meeting', new_meeting_path, class: 'btn btn-primary' if user_signed_in? %>
